{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:shopify/esnext"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console": "off",
        "no-warning-comments": "off",
        "no-process-env": "off",
        "no-alert": 0,
        "no-undef": 0,
        "import/newline-after-import": 0
    }
}